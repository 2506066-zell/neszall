{
  "version": 2,
  "regions": ["sin1"],
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs",
      "maxDuration": 10
    }
  },
  "routes": [
    { "src": "^/$", "dest": "/public/index.html" },
    { "src": "^/api/(.*)$", "dest": "/api/$1" },
    { "src": "^(?!/api)(.*)$", "dest": "/public/$1" }
  ],
  "rewrites": [
    { "source": "/", "destination": "/public/index.html" },
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/public/$1" }
  ],
  "cleanUrls": true,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "Referrer-Policy", "value": "no-referrer" },
        { "key": "Content-Security-Policy", "value": "default-src 'self' https://vercel.live; style-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com https://fonts.googleapis.com; font-src 'self' https://cdnjs.cloudflare.com https://fonts.gstatic.com data:; script-src 'self' 'unsafe-inline' https://vercel.live; img-src 'self' data: blob: https://vercel.live; connect-src 'self' https://vercel.live; frame-src 'self' https://vercel.live" }
      ]
    },
    {
      "source": "/(css|js|icons)/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/(.*)\\.(jpg|jpeg|png|webp|svg|ico)$",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
